<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    android:background="@color/md_black_1000"
    tools:context=".View.Fragment.TicketFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/SwipeTicketFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Titulo de Fragmento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_red_900"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Duplicado de Ticket"></TextView>

            </LinearLayout>

            <!-- Cuerpo de Fragmento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <!-- Formulario a completar-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="1dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/btnBuscarTicketFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_para_boton"

                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                app:srcCompat="@drawable/ic_search_white_40dp"
                                tools:ignore="VectorDrawableCompat">
                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:textSize="12sp"
                                android:text="Buscar"></TextView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioGroup">

                            <RadioButton
                                android:id="@+id/radio1"
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:checked="true"
                                android:textColor="#ffffff"
                                android:textSize="10dp" />

                            <RadioButton
                                android:id="@+id/radio2"
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="3dp"
                                android:checked="false"
                                android:textColor="#ffffff"/>
                            <RadioButton
                                android:id="@+id/radio3"
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="3dp"
                                android:checked="false"
                                android:textColor="#ffffff"
                                 />
                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:id="@+id/ly_migracion_ambos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ambos"
                                android:textSize="13sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ly_migracion1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                >
                                <LinearLayout
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:background="@drawable/bg_para_migracion_3"
                                    android:orientation="vertical"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ly_migracion2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                >
                                <LinearLayout
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:background="@drawable/bg_para_migracion_1"
                                    android:orientation="vertical"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/btnCalendarREFragment"
                                    app:srcCompat="@drawable/ic_ticket_red_30dp"
                                    tools:ignore="VectorDrawableCompat">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ticket"></TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="2dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/bg_para_cajas_de_texto"
                                android:gravity="center">
                                <EditText
                                    android:id="@+id/txtTicketFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:hint="Nro. Ticket"
                                    android:inputType="number"
                                    android:maxLength="20"
                                    android:maxLines="1"
                                    android:textColor="@color/md_white_1000"
                                    android:textColorHint="@color/md_grey_500"
                                    android:textSize="18sp">

                                </EditText>
                            </LinearLayout>
                        </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.8"
                            android:orientation="horizontal"
                            android:layout_marginRight="5dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_calendar_red_30dp"
                                    tools:ignore="VectorDrawableCompat">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fecha"></TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:padding="2dp"
                                android:background="@drawable/bg_para_cajas_de_texto"
                                android:gravity="center">
                                <EditText
                                    android:id="@+id/txtDateTransaction"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:hint="dd-mm-yyyy"
                                    android:inputType="text"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:maxLines="1"
                                    android:textColor="@color/md_white_1000"
                                    android:textColorHint="@color/md_grey_500"
                                    android:textSize="18sp">
                                </EditText>
                            </LinearLayout>
                        </LinearLayout>

                </LinearLayout>

                <!-- Etiqueta a mostrar si no hay data-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtMensajeTickets"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="No existen datos a mostrar"></TextView>

                <!-- Recycler view a mostrar si esw que hay data-->
                <view class="androidx.recyclerview.widget.RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rvListaTicket"
                    android:scrollbars="vertical">
                </view>
            </LinearLayout>

        </LinearLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>