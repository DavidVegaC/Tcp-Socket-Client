    <!--*** Input Layout en el Login ***-->
    <style name="InputLayout1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/md_white_1000</item>
        <item name="boxBackgroundColor">@color/md_grey_700</item>
        <item name="boxStrokeWidth">10dp</item>
        <item name="errorEnabled">true</item>
        <item name="android:text">@color/md_white_1000</item>
        <item name="counterEnabled">true</item>
        <item name="hintTextColor">@color/md_white_1000</item>
    </style>

